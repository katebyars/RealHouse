<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/fragmentHouseDetailPhotoImageView"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:scaleType="centerCrop"
        android:src="@drawable/user_personas" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:paddingTop="20dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="20dp">


            <TextView
            android:id="@+id/fragmentHouseDetailOwnerNameTextView"
            android:text="Owner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="20sp"
           />

    <TextView
        android:id="@+id/fragmentHouseDetailStreetNumberTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Street Number"
        android:textColor="@color/colorAccent"
        android:textStyle="italic"
        android:layout_toLeftOf="@id/fragmentHouseDetailStreetNameTextView"
        android:layout_marginRight="5dp"/>

    <TextView
        android:id="@+id/fragmentHouseDetailStreetNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Street Name"
        android:textColor="@color/colorAccent"
        android:textStyle="italic"
        android:layout_alignTop="@+id/fragmentHouseDetailOwnerNameTextView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        />

    <TextView
        android:id="@+id/fragmentHouseDetailCityTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="City"
        android:textColor="@color/colorAccent"
        android:textStyle="italic"
        android:layout_below="@id/fragmentHouseDetailStreetNameTextView"
        android:layout_toLeftOf="@id/fragmentHouseDetailStateTextView"
        />

    <TextView
        android:id="@+id/fragmentHouseDetailStateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="19dp"
        android:text="State"
        android:textColor="@color/colorAccent"
        android:textStyle="italic"
        android:layout_below="@id/fragmentHouseDetailStreetNameTextView"
        android:layout_alignParentRight="true"
        tools:layout_editor_absoluteY="266dp" />

    <TextView
        android:id="@+id/fragmentHouseDetailZipTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/fragmentHouseDetailStateTextView"
        android:text="Zip"
        android:textColor="@color/colorAccent"
        android:textStyle="italic"
    />
    </RelativeLayout>
</LinearLayout>