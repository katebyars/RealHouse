<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.guest.realhouse.ui.ListAHouseFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="List Your House"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="30dp"
        android:textStyle="bold" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
     >

        <EditText
            android:id="@+id/ownerEditText"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:backgroundTint="@color/colorHint"
            android:hint="House Nickname"
            android:textColor="@color/colorAccent"
            android:textColorHint="@color/colorHint"
            android:textStyle="bold"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintBottom_creator="1"
            app:layout_constraintBottom_toTopOf="@+id/streetNumberEditText"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_constraintLeft_creator="1"
            android:layout_marginBottom="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.0" />

        <EditText
            android:id="@+id/streetNumberEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:backgroundTint="@color/colorHint"
            android:hint="Street Number"
            android:textColor="@color/colorAccent"
            android:textColorHint="@color/colorHint"
            android:textStyle="bold"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintBottom_creator="1"
            app:layout_constraintBottom_toTopOf="@+id/streetNameEditText"
            app:layout_constraintRight_toRightOf="@+id/ownerEditText"
            tools:layout_constraintLeft_creator="1"
            android:layout_marginBottom="15dp"
            app:layout_constraintLeft_toLeftOf="@+id/ownerEditText"
            app:layout_constraintHorizontal_bias="0.0" />

        <EditText
            android:id="@+id/streetNameEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:backgroundTint="@color/colorHint"
            android:hint="Street Name"
            android:textColor="@color/colorAccent"
            android:textColorHint="@color/colorHint"
            android:textStyle="bold"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintBottom_creator="1"
            app:layout_constraintBottom_toTopOf="@+id/cityEditText"
            app:layout_constraintRight_toRightOf="@+id/streetNumberEditText"
            tools:layout_constraintLeft_creator="1"
            android:layout_marginBottom="16dp"
            app:layout_constraintLeft_toLeftOf="@+id/streetNumberEditText"
            app:layout_constraintHorizontal_bias="0.0" />

        <EditText
            android:id="@+id/cityEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:backgroundTint="@color/colorHint"
            android:hint="City"
            android:textColor="@color/colorAccent"
            android:textColorHint="@color/colorHint"
            android:textStyle="bold"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintBottom_creator="1"
            app:layout_constraintBottom_toTopOf="@+id/stateEditText"
            app:layout_constraintRight_toRightOf="@+id/streetNameEditText"
            tools:layout_constraintLeft_creator="1"
            android:layout_marginBottom="16dp"
            app:layout_constraintLeft_toLeftOf="@+id/streetNameEditText"
            app:layout_constraintHorizontal_bias="0.0" />

        <EditText
            android:id="@+id/stateEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:backgroundTint="@color/colorHint"
            android:hint="State"
            android:textColor="@color/colorAccent"
            android:textColorHint="@color/colorHint"
            android:textStyle="bold"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintBottom_creator="1"
            app:layout_constraintRight_toRightOf="@+id/cityEditText"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="@+id/cityEditText"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/zipEditText" />

        <EditText
            android:id="@+id/zipEditText"
            android:layout_width="368dp"
            android:layout_height="43dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:backgroundTint="@color/colorHint"
            android:hint="Zip"
            android:textColor="@color/colorAccent"
            android:textColorHint="@color/colorHint"
            android:textStyle="bold"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/stateEditText"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/imageURLEditText" />

        <EditText
            android:id="@+id/imageURLEditText"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:backgroundTint="@color/colorHint"
            android:hint="Image URL"
            android:textColor="@color/colorAccent"
            android:textColorHint="@color/colorHint"
            android:textStyle="bold"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/zipEditText"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/saveHouseButton" />

        <Button
            android:id="@+id/saveHouseButton"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/colorAccent"
            android:text="Save House"
            android:textColor="@color/colorWhite"
            android:textSize="15sp"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="401dp" />

        <!--</LinearLayout>-->
    </android.support.constraint.ConstraintLayout>
</FrameLayout>